<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this book from being saved:
  <ul>
   <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
   <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>
     <%= form_with model: @user do |f| %>

      <div class="form-group">
      <h4>Name</h4>
      <%= f.text_field :name, class: 'form-control book_title', autofocus: true, id:"inputName" %>
      </div>

      <div class="form-group">
      <h4>Image</h4>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>

      <div class="form-group">
      <h4>Introduction</h4>

      <%= f.text_area :introduction, class: 'form-control book_body', autofocus: true, id:"inputBody" %>
      </div>
      <%= f.submit "Update User" %>
     <% end %>
    </div>
  </div>
</div>